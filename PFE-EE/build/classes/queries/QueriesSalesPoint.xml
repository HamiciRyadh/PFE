<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="QueriesSalesPoint">

<resultMap id = "result" type = "com.lfbservices.pfe.model.SalesPoint">
   <result property = "salesPointId" column = "salespoint_id"/>
   <result property = "salesPointLat" column = "salespoint_lat"/>
   <result property = "salesPointLong" column = "salespoint_long"/>
   <result property = "salesPointName" column = "salespoint_name"/>
   <result property = "salesPointAddress" column = "salespoint_address"/>
</resultMap>


<select id = "getSalesPointById" resultMap = "result">
  SELECT * FROM  ${db.schema}."SalesPoint" 
                        WHERE  salesPoint_id = #{salespointId};
</select>


</mapper>